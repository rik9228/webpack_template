{
  "name": "webpack_sample",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "clean": "del-cli dist/",
    "pug": "pug -P --out dist --pretty ./src/*.pug",
    "pug:w": "onchange ./src/ -- yarn run pug",
    "fix": "eslint --fix ./src/assets/ts/* && prettier --write './src' '!src/img'",
    "webpack:d": "NODE_ENV=development webpack",
    "watch": "NODE_ENV=development webpack --watch",
    "webpack:p": "NODE_ENV=production webpack",
    "dev": "yarn clean && npm-run-all -p pug pug:w webpack:d watch",
    "build": "yarn clean && npm-run-all -p pug fix webpack:p"
  },
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@prettier/plugin-pug": "^1.20.0",
    "@types/webpack-env": "^1.16.3",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "babel-loader": "^8.2.4",
    "babel-preset-minify": "^0.5.1",
    "browser-sync": "^2.27.9",
    "browser-sync-webpack-plugin": "^2.3.0",
    "copy-webpack-plugin": "^10.2.4",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.1",
    "del-cli": "^4.0.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-autofix": "^1.1.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "husky": "^7.0.4",
    "imagemin-mozjpeg": "9.0.0",
    "imagemin-webp-webpack-plugin": "^3.3.6",
    "imagemin-webpack-plugin": "^2.4.2",
    "lint-staged": "^12.3.7",
    "mini-css-extract-plugin": "^2.6.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "path": "^0.12.7",
    "prettier": "^2.6.1",
    "pug": "^3.0.2",
    "pug-cli": "^1.0.0-alpha6",
    "sass": "^1.49.9",
    "sass-loader": "^12.6.0",
    "svg-sprite-loader": "^6.0.11",
    "svg-transform-loader": "^2.0.13",
    "svgo-loader": "^3.0.0",
    "ts-loader": "^9.2.8",
    "typescript": "^4.6.3",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2"
  }
}
